- name: Record and playback HTTP request
  tags:
    - record
    - playback
  preconditions:
    config_files:
      config.http: |
        - request:
            method: post
            path: /hello
            headers:
              Content-Type: application/json
            data: |
              {"a": "x", "b": "y"}
          response:
            content: <html><body>hello1</body></html>
  scenario:
    - Start services:
        MockHttp:
          - serve
          - config.http
          - --port
          - '9999'
        Recorder:
          - record
          - http://localhost:9999
          - recordedconfig.http
    - Assert request response contains:
        method: post
        url: "http://localhost:10088/hello"
        data: |
          {"a": "x", "b": "y"}
        contains: hello1
        headers:
          Content-Type: application/json
    - Stop services
    - Start services:
        MockHttp:
          - serve
          - recordedconfig.http
          - --port
          - '10088'
    - Assert request response contains:
        method: post
        url: http://localhost:10088/hello
        data: |
          {"b": "y", "a": "x"}
        contains: hello1
        headers:
          Content-Type: application/json