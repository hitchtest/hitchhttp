- name: HTTP request that responds with file
  tags:
    - request
  preconditions:
    serve:
      - config.http
    config_files:
      config.http: |
        - request:
            path: /hello
          response:
            content:
              file: contents.html
      contents.html: |
        <html><body>success</body></html>
  scenario:
    - Assert request response contains:
        url: http://localhost:10088/hello
        contains: success