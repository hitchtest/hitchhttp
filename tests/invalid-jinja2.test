- name: Invalid jinja2
  tags:
    - request
    - cli
    - skip
  preconditions:
    config_files:
      config.http: |
        {% raw %}
        {% for i in range(1, 2) %}
        - request:
            path: /hello
          response:
            content: <html><body>correct</body></html>
        {% endraw %}
  scenario:
    - hitchhttp:
        args:
          - serve
          - config.http
    - Expect: Jinja2 error