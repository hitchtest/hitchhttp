- name: Make http request
  tags:
    - request
  preconditions:
    config_files:
      config.http: |
        - request:
            path: /hello1
          response:
            content: <html><body>correct1</body></html>

        - request:
            path: /hello2
          response:
            content: <html><body>correct2</body></html>
  scenario:
    - Start services:
        MockHttp:
          - serve
          - config.http
    - Assert request response contains:
        url: http://localhost:10088/hello2
        contains: correct2