- name: Make emtpy application/json http request
  tags:
    - request
  preconditions:
    config_files:
      config.http: |
        - request:
            path: /hello
          response:
            content: <html><body>correct</body></html>
  scenario:
    - Start services:
        MockHttp:
          - serve
          - config.http
    - Assert request response contains:
        url: http://localhost:10088/hello
        headers:
          Content-Type: application/json
        contains: correct