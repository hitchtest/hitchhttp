- name: Make http request
  tags:
    - request
  preconditions:
    config_files:
      config.http: |
        - request:
            path: /hello
            method: post
          response:
            content: <html><body>hello</body></html>
  scenario:
    - Start services:
        MockHttp:
          - serve
          - config.http
    - Assert request response contains:
        url: http://localhost:10088/hello
        method: post
        contains: hello