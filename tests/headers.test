- name: Make http request matching header
  tags:
    - request
    - headers
  preconditions:
    config_files:
      config.http: |
        - request:
            path: /hello
            headers:
              Authorization: yesitsme
          response:
            content: <html><body>correct1</body></html>
  scenario:
    - Start services:
        MockHttp:
          - serve
          - config.http
    - Assert request response contains:
        url: http://localhost:10088/hello
        headers:
          Authorization: yesitsme
        contains: correct1
        timeout: 1000
    - Assert request response contains:
        url: http://localhost:10088/hello
        contains: No matching